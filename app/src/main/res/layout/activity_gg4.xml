<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gg.matei.avnutrition.gg4">

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:layout_margin="6dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/Logout"
            android:textAlignment="center"
            android:textColor="#9E49D6"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#0BF1E3"
            tools:layout_editor_absoluteX="362dp"
            tools:layout_editor_absoluteY="551dp" />

        <EditText
            android:id="@+id/alimente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="Introduceti alimentele consumate"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spinnerTipulMesei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/alimente"
            android:entries="@array/TipulMesei" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spinnerTipulMesei"
            android:layout_marginTop="21dp"
            android:text="Save" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
